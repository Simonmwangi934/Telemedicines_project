<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="containers">
        <h1>
            <%= title %>
        </h1>
        <a href="/register" class="btn btn-success">Add Doctor</a>
        <!-- Updated button -->

        <% if (action==='add' ) { %>
            <!-- Additional code for 'add' action goes here -->
            <% } else { %>
                <div class="display-header">
                    <div class="row">
                        <!-- Any header info or buttons can go here -->
                    </div>
                </div>
                <div class="display-header">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Specialization</th>
                                    <th>Availability</th>
                                    <th>Start Time</th>
                                    <th>End Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (patients_list.length > 0) { 
        patients_list.forEach(function(doctor) { %>
                                    <tr>
                                        <td>
                                            <%= doctor.Names %>
                                        </td>
                                        <td>
                                            <%= doctor.email %>
                                        </td>
                                        <td>
                                            <%= doctor.phone %>
                                        </td>
                                        <td>
                                            <%= doctor.specialization %>
                                        </td>
                                        <td>
                                            <%= doctor.availability %>
                                        </td>
                                        <td>
                                            <%= doctor.start_time %>
                                        </td>
                                        <td>
                                            <%= doctor.end_time %>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/doctor/edit/<%= doctor.Doctor_id %>" class="btn btn-primary btn-sm">Edit</a>
                                                <!-- Delete link -->
                                                <a href="/doctor/delete/<%= doctor.Doctor_id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">
            Delete
        </a>
                                                <!-- Form to deactivate doctor profile -->
                                                <form action="/doctor/deactivate/<%= doctor.Doctor_id %>" method="POST" style="display:inline;">
                                                    <button type="submit" class="btn btn-warning btn-sm">Deactivate</button>
                                                </form>

                                            </div>
                                        </td>
                                    </tr>
                                    <% }) 
    } else { %>
                                        <tr>
                                            <td colspan="8">No Data Found</td>
                                        </tr>
                                        <% } %>
                            </tbody>

                        </table>
                    </div>
                </div>
                <% } %>
    </div>
</body>

</html>