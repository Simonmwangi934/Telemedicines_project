<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <div class="containers">
        <h1>
            <%= title %>
        </h1>
        <a href="/register" class="btn btn-success">Add Doctor</a>

        <% if (action === 'add') { %>

            <% } else { %>
                <div class="display-header">
                    <div class="row">

                    </div>
                </div>
                <div class="display-header">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Doctor Name</th>
                                    <th>Specialization</th>
                                    <th>Appointment Date</th>
                                    <th>Appointment Time</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (patients_appointments.length > 0) { 
                               patients_appointments.forEach(function(appointment) { %>
                                    <tr>
                                        <td>
                                            <%= appointment.doctor_first_name %>
                                                <%= appointment.doctor_last_name %>
                                        </td>
                                        <td>
                                            <%= appointment.specialization %>
                                        </td>
                                        <td>
                                            <%= new Date(appointment.appointment_date).toLocaleDateString() %>
                                        </td>
                                        <td>
                                            <%= new Date(appointment.appointment_date).toLocaleTimeString() %>
                                        </td>
                                        <td>
                                            <%= appointment.status %>
                                        </td>
                                        <td>
                                            <div class="action-buttons">
                                                <a href="/appointments/edit/<%= appointment.id %>" class="btn btn-primary btn-sm">Edit</a>
                                                <a href="/appointments/delete/<%= appointment.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this appointment?');">Delete</a>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) 
                            } else { %>
                                        <tr>
                                            <td colspan="6">No Data Found</td>
                                        </tr>
                                        <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% } %>
    </div>
</body>

</html>